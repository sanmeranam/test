    script(src='/_static/libs/ace/js/dataTables.bootstrap.min.js')
    script(src='/_static/libs/ace/js/select2.full.min.js')
    script(src='/_static/libs/ace/js/ace/ace.js')
    script(src='/_static/libs/ace/js/ace/mode-html.js')
    script(src='/_static/libs/ace/js/ace/theme-github.js')
    script(src='/_self/js/app.js')